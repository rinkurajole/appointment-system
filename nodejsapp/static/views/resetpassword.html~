
<div class="container">
  <section id="content">
    <form role="form" ng-submit=" vm.password==vm.confirm_password && vm.resetPassword()">
      <h1>Reset Password</h1>
      <div>
	<input type="password" placeholder="New Password" required="" id="password" ng-model="vm.password"/>
      </div>
      <div>
	<input type="password" placeholder="Confirm Password" required="" id="password" ng-model="vm.confirm_password"/>
      </div>
      <span ng-show="vm.password!=vm.confirm_password">Password doesn't match</span>
      <div>
	<input type="submit" value="Reset" />
      </div>
    </form><!-- form -->
  </section><!-- content -->
  </div><!-- container -->
